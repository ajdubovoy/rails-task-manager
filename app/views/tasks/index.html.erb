<div class="container">
<h1>My Tasks</h1>

<ul class="list-group">
<% @tasks.each do |task| %>
  <% check = task.completed ? "<i class='far fa-check-square'></i>" : "<i class='far fa-square'></i>" %>
  <li class="list-group-item"><%= raw  check %> <%= link_to task.title, task_path(task) %></li>
<% end %>
</ul>
<br>
<%= link_to(raw("<i class='fas fa-plus'></i> Add a new task"), new_task_path) %>
</div>